<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherUI">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_singlePic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:text="@string/button_single" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_multiPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:text="@string/button_multi" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_checkEmbeddedPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:text="@string/button_checkEmbeddedPic" />

    </LinearLayout>


</LinearLayout>